user www-data;
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
	worker_connections 768;
	# multi_accept on;
}


stream {
    upstream masters {
        hash $remote_addr consistent;
        {% for server in groups.master %}
        server {{server}}:6443;
        {%endfor%}
    }

    server {
        listen {{nginx_master_port}};
        proxy_connect_timeout 1s;
        proxy_timeout 3s;
        proxy_pass masters;
    }
}

stream {
    upstream masters {
        hash $remote_addr consistent;
        {% for server in groups.master %}
        server {{server}}:{{shared_http_nodeport}};
        {%endfor%}
    }

    server {
        listen 80;
        proxy_connect_timeout 1s;
        proxy_timeout 3s;
        proxy_pass masters;
    }
}


stream {
    upstream masters {
        hash $remote_addr consistent;
        {% for server in groups.master %}
        server {{server}}:{{shared_https_nodeport}};
        {%endfor%}
    }

    server {
        listen 443;
        proxy_connect_timeout 1s;
        proxy_timeout 3s;
        proxy_pass masters;
    }
}